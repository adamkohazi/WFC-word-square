#:kivy 2.3.0

<Cell>
    main_letter: main_letter
    letter_options: letter_options

    group: 'cell'

    on_state: self.change_state()

    canvas.before:
        Color:
            rgba: 0,0,0,1

        Rectangle:
            size: self.size
            pos: self.pos

        Color:
            rgba: 1,1,1,1

        Rectangle:
            size: self.size[0]-2, self.size[1]-2
            pos: self.pos

    Label:
        id: main_letter
        
        #size_hint: 1, 1
        pos_hint:{"center_x":0.5,"center_y":0.5}
        
        color: 0,0,0,1
        font_size: 0.8 * self.size[1]
        halign: 'center'
        valign: 'middle'
    
    Label:
        id: letter_options

        #size_hint: 1, 1
        pos_hint:{"center_x":0.5,"center_y":0.5}

        text_size: root.width, None

        color: 0,0,0,1
        font_size: 0.2 * self.size[1]
        halign: 'left'
        valign: 'top'
    


<IntegerInput>
    current_value: current_value
    Button:
        size_hint_x: None
        width: self.height
        text: "-"
        on_press: self.decrement()
    NumericInput:
        id: current_value
        size_hint_x: None
        width: 50
        text: "1"
        halign: "center"
    Button:
        size_hint_x: None
        width: self.height
        text: "+"
        on_press: self.increment()