#:kivy 2.3.0

<CrosswordCell>
    cell_options: cell_options

    multiline: False
    halign: "center"
    font_size: 0.8 * self.size[1]
    padding: 0
    border: 2, 2, 2, 2

    background_color: 1, 1, 1, 1
    cursor_color: self.background_color

    Label:
        id: cell_options
        font_size: 0.2 * self.parent.font_size
        text_size: self.size
        halign: 'left'
        valign: 'top'
    
    Label:
        id: cell_options

BoxLayout:
    orientation: "vertical"

    AnchorLayout:
        padding: 50, 50, 50, 50

        GridLayout:
            id: grid
            cols: 5
            rows: 5
            height: self.minimum_height
            width: self.minimum_width
            size_hint: None, None
            row_default_height: min((self.parent.size[0] - 100)/self.cols, (self.parent.size[1] - 100)/self.rows)
            row_force_default: True
            col_default_width: self.row_default_height
            col_force_default: True

        
    StackLayout:
        size_hint_y: None
        height: 100
        orientation: "lr-tb"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Dimensions"
            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Width: "
                Button:
            		size_hint_x: None
            		width: 30
                	text: "-"
                    on_press: width_text.decrement()
            	NumericInput:
                    id: width_text
                    size_hint_x: None
            		width: 50
            		text: "5"
                    halign: "center"
                    min_value : 1
                    max_value : 20
                    hint_text : '{}-{}'.format(self.min_value, self.max_value)
                    on_text: app.setCrosswordSize()
                Button:
            		size_hint_x: None
            		width: 30
                	text: "+"
                    on_press: width_text.increment()

            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Height: "
                Button:
            		size_hint_x: None
            		width: 30
                	text: "-"
                    on_press: height_text.decrement()
            	NumericInput:
                    id: height_text
                    size_hint_x: None
            		width: 50
            		text: "5"
                    halign: "center"
                    min_value : 1
                    max_value : 20
                    hint_text : '{}-{}'.format(self.min_value, self.max_value)
                    on_text: app.setCrosswordSize()
                Button:
            		size_hint_x: None
            		width: 30
                	text: "+"
                    on_press: height_text.increment()

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Analysis"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Lorem"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Ipsum"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Solver"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Start"
                on_press: app.startSolver()
            Button:
                size_hint_y: None
            	height: 30
            	text: "Reset"
                on_press: app.resetSolver()