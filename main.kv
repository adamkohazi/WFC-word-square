#:kivy 2.3.0

#:include components/cell/cell.kv

BoxLayout:
    orientation: "vertical"

    AnchorLayout:
        padding: 50, 50, 50, 50

        GridLayout:
            id: grid
            cols: int(height_text.text)
            rows: int(width_text.text)
            height: self.minimum_height
            width: self.minimum_width
            size_hint: None, None
            row_default_height: min((self.parent.size[0] - 100)/self.cols, (self.parent.size[1] - 100)/self.rows)
            row_force_default: True
            col_default_width: self.row_default_height
            col_force_default: True

        
    StackLayout:
        size_hint_y: None
        height: 100
        orientation: "lr-tb"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Dimensions"
            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Width: "
                Button:
            		size_hint_x: None
            		width: 30
                	text: "-"
                    on_press: width_text.decrement()
            	NumericInput:
                    id: width_text
                    size_hint_x: None
            		width: 50
            		text: "5"
                    halign: "center"
                    min_value : 1
                    max_value : 20
                    hint_text : '{}-{}'.format(self.min_value, self.max_value)
                    on_text: app.setCrosswordSize()
                Button:
            		size_hint_x: None
            		width: 30
                	text: "+"
                    on_press: width_text.increment()

            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Height: "
                Button:
            		size_hint_x: None
            		width: 30
                	text: "-"
                    on_press: height_text.decrement()
            	NumericInput:
                    id: height_text
                    size_hint_x: None
            		width: 50
            		text: "5"
                    halign: "center"
                    min_value : 1
                    max_value : 20
                    hint_text : '{}-{}'.format(self.min_value, self.max_value)
                    on_text: app.setCrosswordSize()
                Button:
            		size_hint_x: None
            		width: 30
                	text: "+"
                    on_press: height_text.increment()

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Visuals"
            StackLayout:
            	size_hint_y: None
            	height: 30
                CheckBox:
            		size_hint_x: None
            		width: 40
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Show options"
            StackLayout:
            	size_hint_y: None
            	height: 30
                CheckBox:
            		size_hint_x: None
            		width: 40
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Show word count"
        
        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Analysis"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Update options"
                on_press: app.updateOptions()
            Button:
                size_hint_y: None
            	height: 30
            	text: "Ipsum"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Solver"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Start"
                on_press: app.startSolver()
            Button:
                size_hint_y: None
            	height: 30
            	text: "Reset"
                on_press: app.resetSolver()
            