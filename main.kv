#:kivy 2.3.0

#:include components/cell/cell.kv
#:include components/integer_up_down/integer_up_down.kv

BoxLayout:
    orientation: "vertical"

    AnchorLayout:
        padding: 50, 50, 50, 50

        GridLayout:
            id: grid
            cols: 10
            rows: 10
            height: self.minimum_height
            width: self.minimum_width
            size_hint: None, None
            row_default_height: min((self.parent.size[0] - 100)/self.cols, (self.parent.size[1] - 100)/self.rows)
            row_force_default: True
            col_default_width: self.row_default_height
            col_force_default: True

        
    StackLayout:
        size_hint_y: None
        height: 100
        orientation: "lr-tb"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Dimensions"
            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Width: "
                IntegerUpDown:
                    id: width_input
                    min: 1
                    max: 20
                    size_hint_x: None
                    on_current_value: app.setCrosswordSize()

            StackLayout:
            	size_hint_y: None
            	height: 30
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Height: "
                IntegerUpDown:
                    id: height_input
                    min: 1
                    max: 20
                    size_hint_x: None
                    on_current_value: app.setCrosswordSize()

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Visuals"
            StackLayout:
            	size_hint_y: None
            	height: 30
                CheckBox:
            		size_hint_x: None
            		width: 40
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Show options"
            StackLayout:
            	size_hint_y: None
            	height: 30
                CheckBox:
            		size_hint_x: None
            		width: 40
            	Label:
            		size_hint_x: None
            		width: 80
                	text: "Show word count"
        
        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Analysis"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Update options"
                on_press: app.updateOptions()
            Button:
                size_hint_y: None
            	height: 30
            	text: "Ipsum"

        StackLayout:
            size_hint_x: None
            orientation: "tb-lr"
            width: 200
            Label:
            	size_hint_y: None
            	height: 30
            	text: "Solver"
            Button:
                size_hint_y: None
            	height: 30
            	text: "Start"
                on_press: app.startSolver()
            Button:
                size_hint_y: None
            	height: 30
            	text: "Reset"
                on_press: app.resetSolver()
            